<%= case object.class.name

  when "Location"
    render "locations/location", object: object

  when "Location::Description"
    render "locations/location_description", object: object

  when "Name"
    str = render "names/name", object: object, synonyms: true
    if object.has_notes?
      str += tag.p :show_name_notes.t + ":"
      str += colored_notes_box(true, object.notes.tpl)
    end
    tag.div str, class: "name-section m-3"

  when "NameDescription"
    render "names/name_description", object: object, review: false

  when "Observation"
    render "observations/show_observation", observation: object

  when "Project"
    render "projects/project", object: object

  when "SpeciesList"
    render "species_lists/species_list", object: object

  else
    raise("We appear to have forgotten to tell add/edit_comment " +
          "how to display objects of type \"#{object.class.name}\".")
end %>

<%= render "comments/comments", object: object, controls: false, limit: 10 %>

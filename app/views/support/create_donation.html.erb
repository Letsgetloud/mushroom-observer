<%
  @title = :create_donation_title.l
  @navbar = create_donation_navbar
%>

<div class="form-max-width">
  <%= tag.h1 @title.humanize, class: "display-1" %>
  <%= form_for(:donation, url: {action: :create_donation}) do |form| %>

    <div class="form-group form-inline">
      <%= label_tag(:donation_amount, :confirm_amount.t + ":") %>
      $<%= form.text_field(:amount, size: 7, class: "form-control") %>
    </div>

    <div class="form-group form-inline">
      <%= label_tag(:donation_who, :WHO.t + ":") %>
      <%= form.text_field(:who, size: 50, class: "form-control") %>
    </div>

    <div class="form-group form-inline">
      <%= form.check_box(:anonymous, class: "form-control") %>
      <%= label_tag(:donation_anonymous, :donate_anonymous.t) %>
    </div>

    <div class="form-group form-inline">
      <%= label_tag(:donation_email, :EMAIL.t + ":") %>
      <%= form.text_field(:email, size: 50, class: "form-control") %>
    </div>

    <%= submit_tag(:create_donation_add.l, class: "btn mx-auto") %>

  <% end %>
</div>

<!-- Filters Settings of Account Preferences Form -->
<div class="form-group mt-3">
  <span class="bold"><%= :prefs_content_filters.t %></span>
  <p><%= :prefs_content_filters_explanation.t %><p>
</div>

<% ContentFilter.all.each do |filter| %>
  <% if filter.type == :boolean && filter.prefs_vals.count == 1 %>
    <%= render partial: "account/prefs_filter_checkbox",
               locals: { filter: filter, form: form } %>
  <% elsif filter.type == :boolean && filter.prefs_vals.count > 1 %>
    <%= render partial: "account/prefs_filter_radiobox",
               locals: { filter: filter, form: form } %>
  <% elsif filter.type == :string %>
    <%= render partial: "account/prefs_filter_text_field",
               locals: { filter: filter, form: form } %>
  <% end %>
<% end %>

<%= form.submit :SAVE_EDITS.l, class: "btn btn-primary btn-lg mx-auto mt-3" %>

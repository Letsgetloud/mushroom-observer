<%# The top navbar. Auto-generated navbar "title" links to the index. %>
<%# Tabs rendered in dropdown. %>

<%= tag.div class: "navbar-nav w-100" do %>

  <%# FIXME: not all controllers have an :index action, e.g. Account/login %>
  <%# FIXME: controller.controller_name.humanize is not reliable (Rss logs) %>
  <%# TODO: figure out how to provide a "controller home" link to view - AN %>
  <%= link_to controller.controller_name.humanize,
              { controller: controller.controller_name, # controller to provide
                action: :index }, # this should be the provided link instead
              { id: "page-title",
                class: "navbar-brand mr-auto" } %>

  <%= tag.div class: "ml-auto d-flex flex-column flex-md-row justify-content-between" do %>

    <%= yield :navbar_search %>

    <%= yield :navbar_dropdowns %>

    <%= yield :navbar_create %>

  <% end %>

<% end %>

<% unless browser.bot? %>
  <div class="mo-toc-item">
    <%= tag.span "#{:app_languages.t}:", class: "mo-toc-link d-inline-block" %>
    <a href="#" class="dropdown-toggle d-inline-block" data-toggle="dropdown" role="button" aria-expanded="false">
      <%= I18n.locale.upcase %>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      <% for lang in Language.all.reject(&:beta).sort_by(&:order) %>
        <li><%= link_to(h(lang.name), reload_with_args(user_locale: lang.locale)) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

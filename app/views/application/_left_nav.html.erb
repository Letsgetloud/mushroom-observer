<div class="navbar navbar-dark px-3 py-0 bg-accent">
  <div class="d-block w-100">
    <a id="left_logo"
       href="<%= browser.bot? ? "/sitemap/index.html" : "/" %>"
       class="site-logo navbar-brand d-block mx-auto">
      <div class="logo-wrap position-relative">
        <span class="sr-only" id="logo-text"><%= :app_banner.t %></span>
        <%= inline_svg_tag(
              "combo_logo-03.svg",
              class: 'position-absolute h-100 w-100',
              title: :app_title.l,
              preserve_aspect_ratio: 'xMaxYMax meet',
              aria: true,
              aria_hidden: true
            ) %>
      </div>
    </a>
  </div>
</div>

<nav id="left_nav" class="navbar-light py-3" aria-label="Site navigation">

  <%= render "application/left_nav_item", menu: user_menu %>
  <%= render "application/left_nav_item", menu: intro_menu %>
  <%= render "application/left_nav_item", menu: latest_menu %>
  <%= render "application/left_nav_item", menu: help_menu %>
  <%= render "application/left_nav_item", menu: admin_menu if in_admin_mode? %>

  <%= render partial: "site_nav_translations" %>

</nav>

<%
  @title ||= :edit_name_description_title.t(name: @description.format_name)

  tabs = [
    link_to(:show_object.t(type: :name),
            name_path(@description.name_id, q: get_query_param)),
    link_to(:cancel_and_show.t(type: :name_description),
            name_description_path(name_id: @description.name_id,
              id: @description.id, q: get_query_param))
  ]
  if @description.is_admin?(@user) || in_admin_mode?
    tabs += [
      link_to(:show_description_adjust_permissions.t,
              name_descriptions_adjust_permissions_path(
                name_id: @description.name_id, id: @description.id,
                q: get_query_param))
    ]
  end
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= render "names/form", button_name: :SAVE_EDITS.l %>

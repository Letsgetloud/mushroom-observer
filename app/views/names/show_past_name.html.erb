<%
  @title = :show_past_name_title.t(
    num:  @name.version,
    name: @name.display_name
  )

  tabs = [
    link_to(:show_name.t(name: @name.display_name), name_path(@name.id))
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="row mt-3">
  <div class="col-sm-7 col-lg-9">
    <div class="list-group">
      <div class="list-group-item name-section">
        <%= render "names/name", object: @name, synonyms: false %>
      </div>
    </div>
  </div>
  <div class="col-sm-5 col-lg-3">
    <div class="list-group">
      <div class="list-group-item name-section">
        <%= show_past_versions(@name, bold: lambda {|v| !v.deprecated}) %>
      </div>
    </div>
  </div>
</div>

<div class="col-12">
  <%= show_object_footer(@name) %>
</div>

<%
  @title = :email_tracking_title.t(name: @name.display_name)

  tabs = [
    link_to(:cancel_and_show.t(type: :name),
            name_path(@name.id))
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= :email_tracking_help.tp %>

<%= form_with url: names_email_tracking_path(id: @name.id) do %>
  <br/><center>
    <%= if @notification
      submit_tag(:UPDATE.t, class: "btn") + " " + submit_tag(:DISABLE.t, class: "btn")
    else
      submit_tag(:ENABLE.t, class: "btn")
    end %>
  </center>

  <label for="notification_note_template"><%= :email_tracking_note.t %></label>:<br/>
  <span class="help-note"><%= :email_tracking_note_help.t %></span><br/>
  <%= text_area(:notification,
                :note_template,
                cols: 80,
                rows: 16,
                value: @note_template,
                data: {autofocus: true}) %><br/>
<% end %>

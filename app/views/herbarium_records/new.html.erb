<%
  @title = :create_herbarium_record_title.l

  tabs = [
    link_to(:cancel_and_show.t(type: :observation),
            observation_path(@observation, q: get_query_param)),
    link_to(:create_herbarium.t, new_herbarium_path(q: get_query_param)),
    link_to(:herbarium_index.t, herbaria_path(q: get_query_param))
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="row">
  <div class="col-12 col-sm-7 max-width-text">
    <div class="font-size-lg mb-3"><%= :Observation.t %> #<%= @observation.id %></div>
      <%= render "form", button_name: :ADD %>
  </div>

  <div class="col-12 col-sm-5 max-width-text">
    <%= render partial: "shared/log_item", locals: { object: @observation.rss_log } %>
  </div>
</div>

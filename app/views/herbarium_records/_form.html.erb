<%# form_tag(add_query_param(action: :create_herbarium_record, id: @observation.id)) do %>
<%= form_with model: @herbarium_record do |f| %>

  <%= f.submit button_name.t, class: "btn mx-auto mt-3" %>


  <div class="row">
    <div class="col-12">
      <% if @herbarium_record.observations.size > 1 %>
        <div class="alert alert-warning">
          <%= :edit_affects_multiple_observations.t(type: :herbarium_record) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <%= f.label :herbarium_name, :NAME.t + ":" %>
        <span class="help-note">(<%= :required.t %>)</span>
        <%= f.text_field :herbarium_name, class: "form-control" %>
        <% turn_into_herbarium_auto_completer(:herbarium_record_herbarium_name) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <%= f.label :initial_det, :herbarium_record_initial_det.t + ":" %>
        <span class="help-note">(<%= :optional.t %>)</span>
        <%= f.text_field :initial_det, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="form-inline">
        <%= f.label :accession_number, :herbarium_record_accession_number.t + ":" %>
        <%= f.text_field :accession_number, class:"form-control" %>
        <span class="help-note">(<%= :required.t %>)</span>
      </div>
      <div class="well well-sm mt-3 help-block">
        <div class="arrow-up"></div>
        <%= :create_herbarium_record_accession_number_help.t %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <%= f.label :notes, :NOTES.t + ":" %>
        <span class="help-note">(<%= :optional.t %>)</span>
        <%= f.text_area :notes, class: "form-control", rows: 6 %>
      </div>
    </div>
  </div>

  <%= f.submit button_name.t, class: "btn mx-auto mt-3" %>

<% end %>

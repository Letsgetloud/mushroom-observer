<%
  @title ||= :edit_location_title.t(name: @location.display_name)

  tabs = [
    link_to(:all_objects.t(type: :location),
            locations_path(q: get_query_param)),
    link_to(:cancel_and_show.t(type: :location),
            location_path(@location.id, q: get_query_param))
  ]
  tabs += location_search_links(@location.name)
  @tabsets = {
    pager_for: @image,
    right: draw_tab_set(tabs),
  }
%>

<%= render "locations/form", button_name: :UPDATE %>

<%
  @title ||= :edit_location_description_title.t(name: @description.format_name)

  tabs = [
    link_to(:show_object.t(type: :location),
            location_path(@description.location_id, q: get_query_param)),
    link_to(:show_object.t(type: :location_description),
            location_description_path(@description.location_id, @description.id,
              q: get_query_param))
  ]
  if @description.is_admin?(@user) || in_admin_mode?
    tabs << link_to(:show_description_adjust_permissions.t,
                    location_descriptions_adjust_permissions_path(
                      id: @description.id, q: get_query_param))
  end
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="max-width-text">
  <%= render "form", locals: { button_name: :UPDATE } %>
</div>

<% if reviewer? %>
  <p><%= set_export_status_controls(@description) %></p>
<% end %>

<% even = true
any = false
desc = @description
for f in Location::Description.all_note_fields
  value = desc.send(f).to_s
  if value != ""
    even = !even
    any = true %>
    <%= "form_locations_#{f}".to_sym.t %>:
    <%= colored_notes_box(even, value.tpl) %>
    <br/>
  <% end %>
<% end %>
<%= :show_description_empty.tpl if !any %>

<center>
  <%= show_authors_and_editors(desc) %>
  <% if desc.license %>
    <%= render "shared/form_#{desc.license.form_name}" %>
  <% end %>
</center>

<div class="d-none" id="test">
  Location_Description
</div>

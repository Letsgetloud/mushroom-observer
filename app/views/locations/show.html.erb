<%
  @title = :show_location_title.t(name: @location.display_name)

  tabs = [
    link_to(show_obs_link_title_with_count(@location),
            observations_observations_at_location_path(id: @location.id,
              q: get_query_param)),
    link_to(:all_objects.t(type: :location),
            locations_path(q: get_query_param)),
    link_to(:show_location_create.t,
            new_location_path(q: get_query_param)),
    link_to(:show_location_edit.t,
            edit_location_path(id: @location.id, q: get_query_param))
  ]
  if in_admin_mode?
    tabs += [
      link_to(:show_location_destroy.t,
              location_path(id: @location.id, method: "DELETE"),
              data: { confirm: :are_you_sure.l }),
      link_to(:show_location_reverse.t,
              locations_reverse_name_order_path(id: @location.id,
                q: get_query_param))
    ]
  end
  tabs << draw_interest_icons(@location)
  @tabsets = {
    pager_for: @location,
    right: draw_tab_set(tabs)
  }
%>

<div class="row">
  <div class="col-sm-4 mb-3">
    <%= show_previous_version(@location) %>
    <%= set_export_status_controls(@location) %>
  </div>

  <div class="col-sm-8 mb-3">
    <%= show_alt_descriptions(@location, @projects) %>
  </div>

  <div class="col-12">
    <%= render "locations/location", object: @location %>
  </div>

  <div class="col-12">
    <%= render "comments/comments",
               object: @location, controls: true, limit: 2 %>
  </div>

  <div class="col-12 max-width-text-plus-padding">
    <% if @description && @description.has_any_notes? %>
      <hr/>
      <%= show_embedded_description_title(@description, @location) %>
      <%= render "locations/descriptions/location_description",
                 object: @description %>
      <%= render "comments/comments",
                 object: @description, controls: true, limit: 2 %>
      <hr/>
    <% end %>

    <div class="mt-3">
      <%= show_object_footer(@location) %>
    </div>
  </div>
</div>

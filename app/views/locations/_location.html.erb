<div class="row">
  <div class="col-sm-8">
    <%=
      gmap = make_map([location])
      finish_map(gmap)
      gmap.div(width: "100%", height: "480px").html_safe
    %>
    <center>
      <%= show_authors_and_editors(location) %>
    </center>
  </div>

  <div class="col-sm-4">
    <center>
      <div class="row mt-3">
        <div class="col-12">
          <center>
            <b><%= :NORTH.t %>:</b> <%= location.north %>&deg;
          </center>
        </div>
      </div>
      <div class="row" style="max-width:30em">
        <div class="col-6">
          <span class="float-left">
            <b><%= :WEST.t %>:</b> <%= location.west %>&deg;
          </span>
        </div>
        <div class="col-6">
          <span class="float-right">
            <b><%= :EAST.t %>:</b> <%= location.east %>&deg;
          </span>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <center>
            <b><%= :SOUTH.t %>:</b> <%= location.south %>&deg;
          </center>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-12">
          <center>
            <% if location.high %>
              <b class="text-nowrap"><%= :show_location_highest.t %>:</b>
              <%= location.high %>&nbsp;<%= :units_meters.t %><br/>
            <% end %>
            <% if location.low %>
              <b class="text-nowrap"><%= :show_location_lowest.t %>:</b>
              <%= location.low %>&nbsp;<%= :units_meters.t %><br/>
            <% end %>
          </center>
        </div>
      </div>
    </center>
  </div>

  <div class="col-12 max-width-text">
    <%= ("*" + :NOTES.l + "*: " + location.notes.to_s.html_safe).tpl \
      unless location.notes.blank? %>
  </div>
</div>

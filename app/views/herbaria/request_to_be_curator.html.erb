<%
  @title = :show_herbarium_curator_request.t

  # tabs = [
  #   link_to(:cancel_and_show.t(type: :herbarium),
  #           herbarium_path(id: @herbarium.id, q: get_query_param)),
  #   link_to(:herbarium_index.t, herbaria_path(q: get_query_param))
  # ]
  # @tabsets = { right: draw_tab_set(tabs) }

  @navbar = {} # reset
  @navbar[:title] = { title: :HERBARIA.t, url: herbaria_path }
  @navbar[:links] = [
    { title: :cancel_and_show.t(type: :herbarium),
      url: herbarium_path(id: @herbarium.id q: get_query_param),
      icon: "fa-backspace" }
  ]
%>

<%= tag.div class: "form-max-width mt-4" do %>
  <%= tag.h1 @title.humanize, class: "display-1" %>
  <%= :show_herbarium_curator_help.tp %>
  <%= form_with url: herbaria_request_to_be_curator_path(id: @herbarium.id,
        q: get_query_param, back: @back) do %>
    <div class="form-group mt-3">
      <%= label_tag(:herbarium_name, :HERBARIUM.t) %>: <%= @herbarium.name.t %>
    </div>

    <div class="form-group mt-3">
      <%= label_tag(:notes, :NOTES.t + ":") %>
      <%= text_area_tag(:notes, "", rows: 10, class: "form-control",
                        data: {autofocus: true}) %>
    </div>

    <%= submit_tag(:SEND.l, class: "btn mx-auto mt-3") %>
  <% end %>
<% end %>
